<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.movie.tutorial.com">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--This would have been used for room data setup-->
    <!--<uses-permission android:name="capp.movie.tutorial.com.TERMS_READ"/>-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MovieDetailActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="app.movie.tutorial.com.data.ContentProvider"
            android:authorities="app.movie.tutorial.com"
            android:exported="false"/>
    </application>

</manifest>